---
interface Props {
   title: string;
   subTitle?: string;
}

const { title, subTitle = '' } = Astro.props;
---

<div class="mb-12 text-center">
   <h2
      class="mb-4 text-3xl font-bold sm:text-4xl lg:text-5xl text-primary text-balance"
   >
      {title}
   </h2>
   <p class="text-secondary">
      {subTitle}
   </p>
</div>
